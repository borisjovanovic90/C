using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Domaci_zadatak_2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Type any numbers and they'll be added. When you type 0, you'll see the sum.");
            int s=0;
            int i = Convert.ToInt32(Console.ReadLine());
            while (i>0)
            {
                s = s + i;
                i = Convert.ToInt32(Console.ReadLine());
            }
            Console.WriteLine("Your sum is {0}", s);

        }
    }
}
